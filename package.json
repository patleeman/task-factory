{
  "name": "task-factory",
  "version": "0.2.0",
  "description": "A lean manufacturing-inspired task queue system for AI agents",
  "type": "module",
  "bin": {
    "task-factory": "./bin/task-factory.js"
  },
  "files": [
    "bin/",
    "dist/",
    "packages/client/dist/",
    "extensions/",
    "skills/"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build -w @task-factory/shared && concurrently \"npm run dev:shared\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:shared": "npm run dev -w @task-factory/shared",
    "dev:server": "npm run dev -w @task-factory/server",
    "dev:client": "npm run dev -w @task-factory/client",
    "build": "npm run build -w @task-factory/shared && npm run build -w @task-factory/server && npm run build -w @task-factory/client && node scripts/bundle-server.js",
    "start": "npm run start -w @task-factory/server",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage -w @task-factory/server",
    "check:deadcode": "npm run check:deadcode:knip && npm run check:deadcode:madge",
    "check:deadcode:knip": "knip --config knip.json",
    "check:deadcode:madge": "madge --circular packages/server/src/index.ts packages/client/src/main.tsx packages/shared/src/index.ts extensions",
    "check:release": "npm run lint && npm run typecheck && npm run test && npm run build && npm run check:deadcode"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "@mariozechner/pi-coding-agent": "^0.53.0",
    "@sinclair/typebox": "^0.34.48",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "knip": "^5.83.1",
    "madge": "^8.0.0",
    "typescript": "^5.7.3"
  }
}
