{
  "name": "task-factory",
  "version": "0.5.0",
  "description": "A lean manufacturing-inspired task queue system for AI agents",
  "type": "module",
  "bin": {
    "task-factory": "./bin/task-factory.js"
  },
  "files": [
    "bin/",
    "dist/",
    "packages/client/dist/"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev -w @task-factory/server",
    "dev:client": "npm run dev -w @task-factory/client",
    "build": "npm run build -w @task-factory/shared && npm run build -w @task-factory/server && npm run build -w @task-factory/client && node scripts/bundle-server.js",
    "start": "npm run start -w @task-factory/server",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces --if-present"
  },
  "dependencies": {
    "@clack/prompts": "^0.10.0",
    "chalk": "^5.4.1",
    "cli-table3": "^0.6.5",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "playwright": "^1.58.2",
    "typescript": "^5.7.3"
  }
}
