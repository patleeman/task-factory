{
  "name": "pi-factory",
  "version": "0.1.0",
  "description": "A lean manufacturing-inspired task queue system for AI agents",
  "type": "module",
  "bin": {
    "pifactory": "./bin/pi-factory.js",
    "pi-factory": "./bin/pi-factory.js"
  },
  "files": [
    "bin/",
    "dist/",
    "packages/client/dist/",
    "extensions/",
    "skills/"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run build -w @pi-factory/shared && concurrently \"npm run dev:shared\" \"npm run dev:server\" \"npm run dev:client\"",
    "dev:shared": "npm run dev -w @pi-factory/shared",
    "dev:server": "npm run dev -w @pi-factory/server",
    "dev:client": "npm run dev -w @pi-factory/client",
    "build": "npm run build -w @pi-factory/shared && npm run build -w @pi-factory/server && npm run build -w @pi-factory/client && node scripts/bundle-server.js",
    "start": "npm run start -w @pi-factory/server",
    "lint": "npm run lint --workspaces",
    "typecheck": "npm run typecheck --workspaces",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage -w @pi-factory/server"
  },
  "dependencies": {
    "@mariozechner/pi-coding-agent": "^0.52.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.35.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "concurrently": "^9.2.1",
    "esbuild": "^0.27.3",
    "eslint": "^9.35.0",
    "globals": "^16.4.0",
    "typescript": "^5.7.3"
  }
}
